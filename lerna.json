{
  "npmClient": "yarn",
  "npmClientArgs": ["--no-lockfile"],
  "useWorkspaces": true,
  "stream": true,
  "packages": [
    "packages/*",
    "packages/*/examples/*",
    "packages/timestamp/example"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "changelogPreset": "conventional-changelog-conventionalcommits",
      "message": "ci(release): publish",
      "registry": "https://registry.npmjs.org/"
    },
    "bootstrap": {
      "ci": false 
    }
  },
  "version": "independent"
}
